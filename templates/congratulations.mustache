{{!
    @template mod_example/congratulations_card

    Example context (json):
    {
        "title": "Congratulations!",
        "message": "You have successfully completed the module.",
    }
}}
<div class="card text-center mt-5">
    <div class="card-header bg-success text-white">
        {{strings.title}}
    </div>
    <div class="card-body">
        <h5 class="card-title">{{strings.message}}</h5>
        <a href="{{{button_link}}}" class="btn btn-primary pull-left">{{{strings.restartquiz}}}</a>
        <a href="{{{button_link}}}" class="btn btn-primary pull-right">{{{strings.back}}}</a>
    </div>
</div>
