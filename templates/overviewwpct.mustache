{{!
    @template mod_booking/business_card

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "piechart": "<div class=\"chart-area\" id=\"chart-area-667a7bc7a13d2667a7bc7995b77\"> <div class=\"chart-image\" role=\"presentation\" aria-describedby=\"chart-table-data-667a7bc7a13d2667a7bc7995b77\"></div> <div class=\"chart-table \"> <p class=\"chart-table-expand\"> <a href=\"#\" aria-controls=\"chart-table-data-667a7bc7a13d2667a7bc7995b77\" role=\"button\"> Show chart data </a> </p> <div class=\"chart-table-data\" id=\"chart-table-data-667a7bc7a13d2667a7bc7995b77\" role=\"complementary\" aria-expanded=\"false\"></div> </div> </div>",
        "absquestions": "2",
        "editedquestions": "[edit => 30, correct => 10, ...]",
        "strings": "[edited_questions => 'Some text', questions_statistic => 'more texts', ...]",
        "wrongquiz": "www.link2quiz.at",
    }

}}
<div class="qbank_nocorrectanswer_question-statistics-container">
    <div class="qbank_nocorrectanswer_card">
        <div class="qbank_nocorrectanswer_card-header">
            {{strings.questions_statistic}}
        </div>
        <div class="qbank_nocorrectanswer_card-body">
            {{#piechart}}
              <div class="qbank_nocorrectanswer_progress-bar-container">
                  <div class="qbank_nocorrectanswer_piechart">
                    {{{piechart}}}
                  </div>
              </div>
            {{/piechart}}
            <div class="qbank_nocorrectanswer_statistics">
                <div class="qbank_nocorrectanswer_stat-item">
                    <i class="fa-solid fa-check-to-slot"></i>
                        {{strings.edited_questions}} ({{editedquestions.pct.edit}}%)
                </div>
                <div class="qbank_nocorrectanswer_stat-item">
                    <i class="fas fa-check-circle"></i> {{strings.correct_questions}} ({{editedquestions.pct.correct}}%)
                </div>
                <div class="qbank_nocorrectanswer_stat-item">
                    <i class="fas fa-exclamation-triangle"></i> {{strings.wrong_questions}} ({{editedquestions.pct.wrong}}%)
                </div>
            </div>
            {{#wrongquiz}}
            <div class="qbank_nocorrectanswer_repeat-button">
                <a href="{{wrongquiz}}" class="qbank_nocorrectanswer_btn btn-primary">
                    {{strings.repeat_wrong_btn}}
                </a>
            </div>
            {{/wrongquiz}}
        </div>
    </div>
</div>